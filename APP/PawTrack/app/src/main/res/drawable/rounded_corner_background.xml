<!-- rounded_corner_background_with_double_outline.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjust the radius to change the roundness of corners -->
            <solid android:color="@color/black" />
            <stroke
                android:width="10dp"
                android:color="@color/black" />
        </shape>
    </item>
    <!-- Inner outline (first outline) -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjust the radius to change the roundness of corners -->
            <solid android:color="@color/black" />
            <stroke
                android:width="5dp"
                android:color="@color/fill_color" />
        </shape>
    </item>
    <!-- Inner outline (second outline) -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Adjust the radius to change the roundness of corners -->
            <solid android:color="@color/outline_color" />
            <stroke
                android:width="5dp"
                android:color="@color/black" />
        </shape>
    </item>
</layer-list>
